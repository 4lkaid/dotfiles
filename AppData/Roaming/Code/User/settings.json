{
  "editor.accessibilitySupport": "on",
  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.fontWeight": "bold",
  "editor.formatOnSave": true,
  "editor.renderControlCharacters": true,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "LICENSE*": "plaintext"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "update.mode": "manual",
  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.enableExperiments": false,

  // Dependi 配置
  "dependi.npm.enabled": false,
  "dependi.go.enabled": false,
  "dependi.php.enabled": false,
  "dependi.python.enabled": false,
  "dependi.vulnerability.enabled": false,

  // markdownlint 配置
  "markdownlint.config": {
    "MD001": false,
    "MD036": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  // pgFormatter 配置
  "pgFormatter.noExtraLine": true,
  "pgFormatter.perlBinPath": "D:/Dev/Strawberry/perl/bin/perl.exe",

  // Prettier 配置
  "[html][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
